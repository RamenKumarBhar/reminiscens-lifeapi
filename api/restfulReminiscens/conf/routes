# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# User and Authentication Management Management
GET     /user                           controllers.User.getUsers()
GET     /user/:uid                      controllers.User.getUser(uid: Long)
POST    /user                           controllers.User.createUser()
PUT     /user/:uid                      controllers.User.updateUser(uid: Long)
DELETE  /user/:uid                      controllers.User.deleteUser(uid: Long)
#POST    /signup                         controllers.User.signup()
#POST    /login                          controllers.User.login()
#PUT     /login                          controllers.User.updateLogin(sid: Long)
#DELETE  /login                          controllers.User.logout(sid: Long)

### from socialgym
GET     /login                          controllers.Application.index()
GET     /authenticated                  controllers.Restricted.index()
GET     /login/:id                      controllers.Restricted.id(id: String)
GET     /logout                         com.feth.play.module.pa.controllers.Authenticate.logout()
GET     /authenticate/:provider         controllers.AuthenticateLocal.authenticate(provider: String)
GET     /authenticate/:provider/denied  controllers.Application.oAuthDenied(provider: String)
POST    /signup                         controllers.Application.doSignup()
#used to verify the email
GET     /accounts/verify/:token         controllers.Signup.verify(token: String)
GET     /accounts/unverified            controllers.Signup.unverified()
GET     /accounts/exists                controllers.Signup.exists()
POST    /login                          controllers.Application.doLogin()
GET    /login/denied                    controllers.Application.onLoginUserNotFound()




# People, Life Stories and Timeline
GET     /person                         controllers.Person.getPersonAll()
GET     /person/:id                     controllers.Person.getPerson(id: Long)
POST    /person                         controllers.Person.createPerson()
POST    /person/mention                 controllers.Person.createMentionPerson()
PUT     /person/:id                     controllers.Person.updatePerson(id: Long)
DELETE  /person/:id                     controllers.Person.deletePerson(id: Long)

GET     /person/:id/timeline            controllers.Timeline.getPersonTimeline(id: Long)
GET     /person/:id/timeline/:from/:to  controllers.Timeline.getPersonTimelineWithLimits(id: Long, from: Long, to: Long)
POST    /person/:id/timeline            controllers.Timeline.synchronizePersonTimeline(id: Long)

GET     /person/:id/lifestory           controllers.LifeStory.getPersonLifeStoryAll(id: Long)
GET     /person/:id/lifestory/proganist controllers.LifeStory.getProtagonistLifeStoryAll(id: Long)
GET     /lifestory/:lsid                controllers.LifeStory.getLifeStory(lsid: Long)
POST    /lifestory                      controllers.LifeStory.createLifeStory()
PUT     /lifestory/:lsid                controllers.LifeStory.updateLifeStory(lsid: Long)
DELETE  /lifestory/:lsid                controllers.LifeStory.deleteLifeStory(lsid: Long)
POST    /lifestory/:lsid/person/:id     controllers.LifeStory.addParticipantToLifeStory(lsid: Long, id: Long)
POST    /lifestory/:lsid/protag/:id     controllers.LifeStory.addProtagonistToLifeStory(lsid: Long, id: Long)
DELETE  /lifestory/:lsid/person/:id     controllers.LifeStory.deletePersonFromLifeStory(lsid: Long, id: Long)
POST    /lifestory/:lsid/memento/:mid   controllers.LifeStory.addMementoToLifeStory(lsid: Long, mid: Long)
POST    /lifestory/:lsid/memento        controllers.LifeStory.addNewMementoToLifeStory(lsid: Long)

GET     /person/:id/memento             controllers.Memento.getAllPersonMemento(id: Long)
#GET     /person/:id/memento/protagonist controllers.Memento.getAllPersonMemento(id: Long)
#GET     /person/:id/memento/mention     controllers.Memento.getAllPersonMemento(id: Long)
GET     /memento/:id                    controllers.Memento.getMemento(id: Long)
POST    /memento                        controllers.Memento.createMemento()
PUT     /memento/:id                    controllers.Memento.updateMemento(id: Long)
DELETE  /memento/:id                    controllers.Memento.deleteMemento(id: Long)
POST    /memento/:id/person             controllers.Memento.addMementoParticipant(id: Long)
POST    /memento/:id/person/:pid        controllers.Memento.addMementoParticipantByPersonId(id: Long, pid: Long)

GET     /person/:id/relationships       controllers.Relationship.getPersonRelationships(id: Long)
GET     /person/:id/curators            controllers.Relationship.getPersonCurators(id: Long)
PUT     /relationship/:id               controllers.Relationship.updateRelationship(id: Long)
POST    /relationship                   controllers.Relationship.addRelationship()
DELETE  /relationship/:id               controllers.Relationship.deleteRelationship(id: Long)


# Contextual Reminiscence
GET     /context/:cid                   controllers.ContextualReminiscence.getContext(cid: Long)
GET     /context/:cid/curators          controllers.ContextualReminiscence.getContextCurators(cid: Long)
GET     /context/:cid/memento/:mid      controllers.ContextualReminiscence.getContextMemento(cid: Long, mid: Long)
POST    /context/:cid/memento           controllers.ContextualReminiscence.createContextMemento(cid: Long)
PUT     /context/:cid/memento           controllers.ContextualReminiscence.updateContextMemento(cid: Long)
DELETE  /context/:cid/memento/:mid      controllers.ContextualReminiscence.deleteContextMemento(cid: Long, mid: Long)
GET     /context/:cid/question          controllers.ContextualReminiscence.getContextQuestions(cid: Long)
GET     /context/:cid/question/:decade  controllers.ContextualReminiscence.getContextQuestionsForDecade(cid: Long, decade: Long)
GET     /context/:cid/question/curated  controllers.ContextualReminiscence.getContextQuestionsByCurators(cid: Long)
POST    /context/:cid/question          controllers.ContextualReminiscence.createContextCuratedQuestions(cid: Long)

# General Questions
GET     /question/:byear/:fyear/        controllers.Questions.getGeneralQuestionsForYear(byear: Long, fyear: Long)
GET     /question/:chapter              controllers.Questions.getGeneralQuestionsForLifeChapter(chapter: String)

# General Public Mementos API (lifecontext proxy)
GET     /memento/random/:lang           controllers.PublicMemento.getRandomMemento(lang: String)
GET     /memento/:mid                   controllers.PublicMemento.getMemento(mid: Long)
GET     /memento/:decade/:place         controllers.PublicMemento.getMementoList(decade: Long, place: String, lat ?= null, lon ?= null, rad ?= null, lang: String ?= "it_IT")
