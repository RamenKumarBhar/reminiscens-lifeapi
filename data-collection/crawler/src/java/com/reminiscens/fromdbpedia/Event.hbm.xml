<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.reminiscens.fromdbpedia.Event" table="reminiscens.Event" >
        <id name="event_id" type="int" column="event_id" >
            <generator class="native"/>
        </id>
 
        <property name="headline">
            <column name="headline" />
        </property>
        <property name="text">
            <column name="text" />
        </property>
        <property name="type">
            <column name="type" />
        </property>
        <property name="source">
            <column name="source" />
        </property>
        <property name="source_url">
            <column name="source_url" />
        </property>
        <property name="last_update">
            <column name="last_update" />
        </property>
        <many-to-one name="location"
                     column="location_id"
                     cascade="all"  unique="true"
                />
        <many-to-one name="timeInterval"
                     column="time_interval_id"
                     cascade="all"  unique="true"
                />
    </class>
</hibernate-mapping>
