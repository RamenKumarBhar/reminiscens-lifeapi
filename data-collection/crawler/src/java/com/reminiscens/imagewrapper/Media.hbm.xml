<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.reminiscens.imagewrapper.Media" table="reminiscens.Media" >
        <id name="media_id" type="int" column="media_id" >
            <generator class="native"/>
        </id>
 
        <property name="media_url">
            <column name="media_url" />
        </property>
        <property name="media_type">
            <column name="media_type"/>
        </property>
        <property name="caption">
            <column name="caption" />
        </property>
        <property name="text">
            <column name="text" />
        </property>
        <property name="source">
            <column name="source" />
        </property>
        <property name="source_url">
            <column name="source_url" />
        </property>
        <property name="last_update">
            <column name="last_update" />
        </property>
        <property name="is_public">
            <column name="is_public" />
        </property>
        <property name="locale">
            <column name="locale" />
        </property>
        <many-to-one name="location"
                     column="location_id"
                     cascade="all"  unique="true"
                />
        <many-to-one name="timeInterval"
                     column="time_interval_id"
                     cascade="all"  unique="true"
                />

    </class>
</hibernate-mapping>

